page {
  height: 100%;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 25rpx;
  padding-top: 10rpx;
  height: 250rpx;
  width: 100%;
  background-color: #fff;
}

.shop-timeline {
  height: 200rpx;
  width: 100%;
  line-height: 100rpx;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #353535;
}

.shop-address {
  height: 200rpx;
  width: 100%;
  line-height: 100rpx;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #353535;
}

.field-container {
  display: flex;
}

.field-key {
  display: inline-block;
  margin: 0 30rpx;
  width: 150rpx;
}

.field-value {
  display: inline-block;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-backstage {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  color: #a9a5f5;
  font-size: 28rpx;
}
