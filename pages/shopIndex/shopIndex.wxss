.header {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  flex-direction: column;
  height: 280rpx;
  width: 100%;
  background-color: #fff;
}

.header image {
  margin-top: 20rpx;
  height: 110rpx;
  width: 110rpx;
}

.shop-name {
  margin-top: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.shop-status {
  margin-top: 15rpx;
  display: inline-block;
  height: 38rpx;
  width: 97rpx;
  line-height: 38rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  text-align: center;
}

.shop-details-status-active {
  background-color: #18b019;
  color: #fff;
}

.shop-details-status-deactive {
  background-color: #fa8b83;
  color: #fff;
}

.business-volume {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 2rpx;
  height: 170rpx;
  width: 100%;
  background-color: #fff;
}

.today-business-volume, .today-orders {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 100rpx;
  width: 49%;
}

.business-volume-line-between {
  height: 100rpx;
  width: 2rpx;
  background-color: #e8e8e8;
}

.business-volume-value {
  font-size: 24rpx;
  color: #a4a4a4;
}

.shop-function {
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  min-height: 300rpx;
  width: 100%;
  background-color: #fff;
}

.shop-function image {
  height: 70rpx;
  width: 70rpx;
  margin-bottom: 30rpx;
}

.function {
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 33%;
  margin-top: 50rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.new-order-count {
  position: absolute;
  top: -10rpx;
  right: 80rpx;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  background-color: red;
  color: #fff;
}

.bubble-container {
  position: relative;
  height: 80rpx;
  z-index: 99;
}

.bubble-image {
  position: absolute;
  right: 60rpx;
  width: 250rpx;
  height: 150rpx;
}

.bubble-text {
  position: absolute;
  right: 76rpx;
  top: 50rpx;
}

.bubble-count {
  position: absolute;
  right: 160rpx;
  top: 90rpx;
  color: #e56c5a;
}

button {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: flex-end;
  height: 180rpx;
  line-height: 0;
  background-color: #f5f5f5;
}

button:hover {
  background-color: #f5f5f5 !important;
}

button::after {
  border: none !important;
}

.form-count-container {
  margin-top: 10rpx;
  position: relative;
  width: 100%;
  font-size: 28rpx;
}

.fox-image {
  height: 180rpx;
  width: 400rpx;
}

.click-count {
  position: absolute;
  bottom: 25rpx;
  left: 50%;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}
