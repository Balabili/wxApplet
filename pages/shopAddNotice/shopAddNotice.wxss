.notice-container {
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  width: 100%;
  margin: 30rpx auto;
  background-color: #fff;
  font-size: 30rpx;
}

.notice-textbox {
  padding: 30rpx;
  width: 90%;
  height: 150rpx;
}

.notice-length {
  position: absolute;
  top: 150rpx;
  right: 30rpx;
  color: #c1c1c1;
}

.save-notice {
  margin-top: 10rpx;
  width: 95%;
  color: #fff;
}
