page {
  height: 100%;
}

.search-container {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
}

.search-icon {
  margin-left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 60rpx 0 0 60rpx;
}

.icon {
  margin-top: 15rpx;
}

.search-box {
  background-color: #f5f5f5;
  height: 60rpx;
  width: 610rpx;
  font-size: 24rpx;
  border-radius: 0 70rpx 70rpx 0;
}

.search-text {
  font-size: 32rpx;
  color: #bebebe;
  margin-left: 20rpx;
}

.tab-container {
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  align-items: center;
  height: 88rpx;
  width: 100%;
  font-size: 32rpx;
  color: #bebebe;
  margin-top: 1rpx;
  margin-bottom: 1rpx;
  background-color: #fff;
}

.commodity-count {
  font-size: 24rpx;
}

.tab-active {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 6rpx solid #1aad19;
  color: #1aad19;
}

.commodity-container {
  display: flex;
  width: 100%;
  height: 1000rpx;
  overflow: hidden;
}

.commodity-kind {
  width: 25%;
  background-color: #f5f5f5;
}

.commodity-kind-container {
  display: flex;
  flex-direction: column;
  height: 1000rpx;
  font-size: 30rpx;
  color: #888;
  overflow: scroll;
}

.commodity-kind-list {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 168rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.commodity-kind-active {
  background-color: #fff;
  color: black;
  border-left: 6rpx solid #1aad19;
  width: 90%;
  padding-left: 5rpx;
  padding-right: 10rpx;
}

.commodity-list-container {
  display: flex;
  flex-direction: column;
  height: 1000rpx;
  overflow: scroll;
}

.commodity-list {
  width: 75%;
}

/* 商品详情 */

.commodity-item-container {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  padding-top: 20rpx;
  border-bottom: 2rpx solid #f6f6f6;
  background-color: #fff;
}

.commodity-details {
  display: flex;
  display: -webkit-flex;
  width: 100%;
}

.commodity-image-container {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.commodity-image-container>image {
  width: 150rpx;
  height: 150rpx;
}

.commodity-description {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-between;
  width: 70%;
  padding-right: 20rpx;
}

.commodity-header {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.commodity-title {
  display: inline-block;
  width: 280rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.commodity-label-container {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  margin-bottom: 10rpx;
  height: 30rpx;
}

.commodity-edit {
  color: #1aad19;
}

.commodity-label {
  display: inline-block;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  margin-right: 10rpx;
  border-radius: 4rpx;
  text-align: center;
}

.commodity-weightage-container {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.commodity-weightage {
  display: block;
  font-size: 24rpx;
  color: #c3c3c3;
}

.delete-commodity {
  color: red;
  font-size: 30rpx;
}

.commodity-footer {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 10rpx;
}

.special-price {
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #bbb;
  text-decoration: line-through;
}

.commodity-button-group {
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100rpx;
}

.commodity-button {
  display: inline-block;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 4rpx;
  color: #fff;
  font-size: 26rpx;
  background-color: #5dc355;
}

.cancel-button {
  border: 1rpx solid #5dc355;
  color: #5dc355;
  background-color: #fff;
}

.drawer-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 550rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fff;
  margin: -150rpx 100rpx 0 100rpx;
  border-radius: 4rpx;
}

.btn-container {
  display: flex;
  display: -webkit-flex;
  height: 100rpx;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
}

.btn {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
}

.special-price-textbox {
  margin: 30rpx 20rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-ok {
  border-left: 1rpx solid #f5f5f5;
  color: #1aad19;
}
