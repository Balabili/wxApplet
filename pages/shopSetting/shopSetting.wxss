.shop-info, .dispatch-info {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  width: 100%;
  font-size: 30rpx;
}

.shop-info-header, .dispatch-info-header {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  width: 100%;
  height: 70rpx;
  font-size: 30rpx;
  color: #b1b1b1;
}

.shop-item, .dispatch-item {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 2rpx;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
}

.shop-logo {
  height: 120rpx !important;
}

.value-image {
  height: 86rpx;
  width: 86rpx;
}

.key {
  display: inline-block;
  width: 150rpx;
  margin-left: 30rpx;
}

.value {
  width: 500rpx;
  margin-right: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: right;
}

.logo-value {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: flex-end;
}

.view-details-img {
  margin-right: 10rpx;
  height: 40rpx;
  width: 40rpx;
}

.action-sheet {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.action-sheet-cancel {
  margin-left: 30rpx;
}

.action-sheet-sure {
  margin-right: 30rpx;
  color: #7a80fa;
}
