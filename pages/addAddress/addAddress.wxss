.header-icon {
  display: inline-block;
  height: 30rpx;
  width: 8rpx;
  background-color: #1aad19;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.placeholder-class {
  color: #c1c1c1;
  font-size: 30rpx;
}

.address-form {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.contact-info {
  margin-top: 20rpx;
  height: 380rpx;
  width: 100%;
  background-color: #fff;
  font-size: 30rpx;
}

.contact-info-header, .delivery-address-header {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 34rpx;
  color: #a9a9a9;
}

.contact-name-container, .contact-phone-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.contact-name {
  display: inline-block;
  margin-left: 30rpx;
  width: 150rpx;
}

.contact-name-textbox {
  width: 450rpx;
}

.radio-group {
  display: flex;
  margin-top: 50rpx;
}

.radio-container {
  margin-left: 50rpx;
}

.between-line {
  height: 2rpx;
  width: 95%;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #f3f3f3;
}

.contact-phone {
  display: inline-block;
  margin-left: 30rpx;
  width: 150rpx;
}

.delivery-address-container {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  min-height: 250rpx;
  width: 100%;
  background-color: #fff;
  font-size: 30rpx;
}

.delivery-address {
  display: flex;
  display: -webkit-flex;
  margin-top: 50rpx;
}

.delivery-address-details {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  margin-top: 20rpx;
}

.delivery-address-key {
  margin-left: 30rpx;
  display: inline-block;
  width: 250rpx;
}

.delivery-address-value {
  width: 420rpx;
  display: flex;
  align-items: center;
}

.delivery-address-value image {
  width: 30rpx;
  height: 30rpx;
}

.address {
  display: inline-block;
  width: 370rpx;
  margin: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.need-selected {
  color: #bbb;
}

.save-btn {
  width: 90%;
  margin: 60rpx auto;
  background-color: #1aad19;
  color: #fff;
}
