page {
  height: 100%;
  background-color: #f5f5f5;
}

.header-icon {
  display: inline-block;
  height: 30rpx;
  width: 4rpx;
  background-color: #7a80fa;
  margin-left: 30rpx;
  margin-right: 15rpx;
}

.placeholder-class {
  color: #c1c1c1;
  font-size: 30rpx;
}

.contact-info {
  margin-top: 20rpx;
  height: 400rpx;
  width: 100%;
  background-color: #fff;
  font-size: 30rpx;
}

.contact-info-header, .delivery-address-header {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 34rpx;
}

.contact-name-container, .contact-phone-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.contact-name {
  display: inline-block;
  margin-left: 30rpx;
  width: 150rpx;
}

.contact-name-textbox {
  width: 500rpx;
}

.radio-group {
  display: flex;
  margin-top: 50rpx;
}

.radio-container {
  margin-left: 50rpx;
}

.between-line {
  height: 2rpx;
  width: 95%;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #f3f3f3;
}

.contact-phone {
  display: inline-block;
  margin-left: 30rpx;
  width: 150rpx;
}

.delivery-address-container {
  margin-top: 20rpx;
  min-height: 250rpx;
  width: 100%;
  background-color: #fff;
  font-size: 30rpx;
}

.delivery-address {
  display: flex;
  margin-top: 50rpx;
  margin-left: 30rpx;
}

.delivery-address-details {
  display: flex;
  align-items: center;
  margin: 20rpx 0 20rpx 30rpx;
}

.delivery-address-key {
  display: inline-block;
  width: 250rpx;
}

.delivery-address-value {
  display: flex;
  align-items: center;
}

.delivery-address-value image {
  width: 30rpx;
  height: 30rpx;
}

.address {
  display: inline-block;
  width: 380rpx;
  margin: 0 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.need-selected {
  color: #bbb;
}
