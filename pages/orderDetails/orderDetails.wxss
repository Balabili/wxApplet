page {
  min-height: 100%;
  background-color: #f5f5f5;
}

/* 支付状态 */

.payment-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 30rpx;
}

.payment-success-height {
  height: 170rpx;
}

.payment-waiting-height {
  height: 300rpx;
}

.payment-status-title {
  margin-top: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
}

.payment-status-notification {
  margin-top: 15rpx;
  color: #a3a3a3;
}

.payment-time-container {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
  color: #a3a3a3;
}

.payment-time-container image {
  height: 30rpx;
  width: 30rpx;
  margin: 0 10rpx;
}

.payment-time {
  margin-left: 10rpx;
  color: #1aad19;
}

.payment-status-buttons {
  margin-top: 15rpx;
}

.payment-status-cancel {
  display: inline-block;
  padding: 10rpx 50rpx;
  border: 2rpx solid #1aad19;
  border-radius: 8rpx;
  color: #1aad19;
}

.payment-status-paynow {
  display: inline-block;
  padding: 10rpx 50rpx;
  background-color: #1aad19;
  border-radius: 8rpx;
  color: #fff;
  margin-left: 30rpx;
}

/* 联系商家 */

.contact-merchant {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  height: 100rpx;
  width: 100%;
  font-size: 32rpx;
  background-color: #fff;
}

.contact-merchant image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 10rpx;
}

/* 订单详情 */

.order-items-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
}

.order-item-container {
  display: flex;
  align-items: center;
  height: 180rpx;
  width: 90%;
  margin: 0 auto;
  border-bottom: 2rpx solid #f5f5f5;
}

.order-item-container>image {
  height: 140rpx;
  width: 140rpx;
}

.order-item-details {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
  height: 140rpx;
  font-size: 30rpx;
}

.order-item-header {
  display: flex;
  flex-direction: column;
}

.order-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 500rpx;
}

.order-item-weightage {
  font-size: 24rpx;
  color: #d2d2d2;
}

.total-account {
  height: 100rpx;
  line-height: 100rpx;
  width: 90%;
  margin: 0 auto;
  text-align: right;
  font-size: 30rpx;
}

/* 配送设置 */

.setting-dispatch {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  min-height: 280rpx;
  width: 100%;
  background-color: #fff;
  font-size: 30rpx;
}

.setting-key {
  display: inline-block;
  color: #a9a9a9;
  width: 150rpx;
  margin-left: 30rpx;
}

.dispatch-expect-time {
  margin-top: 30rpx;
}

.dispatch-address {
  display: flex;
  margin-top: 30rpx;
}

.dispatch-address-details {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 530rpx;
}

.dispatch-from {
  margin: 30rpx 0;
}

/* 订单详情 */

.order-details {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 100%;
  background-color: #fff;
  font-size: 30rpx;
}

.order-number, .order-time {
  margin-top: 30rpx;
}

.order-payment-way {
  margin-top: 30rpx;
}

.order-remark {
  display: flex;
  display: -webkit-flex;
  align-items: flex-start;
  margin: 30rpx 0;
}

.remark-text {
  display: inline-block;
  width: 530rpx;
}
