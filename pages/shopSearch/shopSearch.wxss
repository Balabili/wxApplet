.search-header {
  position: relative;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-bottom: 1rpx;
}

input {
  height: 60rpx;
  width: 450rpx;
  padding: 0 80rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #000;
}

.search {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #1aad19;
}

.search-icon {
  position: absolute;
  top: 50%;
  left: 60rpx;
  margin-top: -15rpx;
}

.clear-icon {
  position: absolute;
  top: 50%;
  left: 600rpx;
  margin-top: -15rpx;
}

.search-history {
  width: 100%;
}

.search-history-header {
  margin-top: 20rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.history-title {
  font-size: 32rpx;
}

.empty-image {
  height: 30rpx;
  width: 90rpx;
}

.history-search-container {
  display: flex;
  padding: 0 30rpx;
  flex-wrap: wrap;
}

.history-search-box {
  height: 40rpx;
  line-height: 40rpx;
  padding: 10rpx 40rpx;
  margin: 20rpx 30rpx 0 0;
  background-color: #fff;
  border-radius: 40rpx;
  color: #878787;
  font-size: 24rpx;
}

.commodity-container {
  width: 100%;
}

.no-search-result {
  margin-top: 100rpx;
  width: 250rpx;
}

/* 商品详情 */

.commodity-item-container {
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  padding-top: 20rpx;
  border-bottom: 2rpx solid #f6f6f6;
  background-color: #fff;
  width: 100%;
}

.commodity-details {
  display: flex;
  display: -webkit-flex;
  width: 100%;
}

.commodity-image-container {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  margin-left: 24rpx;
  margin-right: 10rpx;
}

.commodity-image-container>image {
  width: 160rpx;
  height: 160rpx;
}

.commodity-description {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  width: 70%;
  padding-right: 20rpx;
}

.commodity-header {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.commodity-title {
  display: inline-block;
}

.commodity-edit {
  color: #1aad19;
}

.commodity-label-container {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  height: 30rpx;
}

.commodity-edit {
  color: #1aad19;
}

.commodity-label {
  display: inline-block;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  margin-right: 10rpx;
  border-radius: 4rpx;
  text-align: center;
}

.commodity-weightage-container {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.commodity-weightage {
  display: block;
  font-size: 24rpx;
  color: #c3c3c3;
  margin-top: 5rpx;
}

.delete-commodity {
  color: red;
  font-size: 30rpx;
}

.commodity-footer {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.special-price {
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #bbb;
  text-decoration: line-through;
}

.commodity-button-group {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  flex-direction: row-reverse;
  width: 100%;
  height: 100rpx;
}

.sold-out-image {
  position: absolute;
  top: 70rpx;
  right: 30rpx;
  height: 100rpx;
  width: 100rpx;
}

.commodity-button {
  display: inline-block;
  margin-right: 34rpx;
  height: 60rpx;
  width: 150rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 4rpx;
  color: #fff;
  font-size: 26rpx;
  background-color: #5dc355;
}

.cancel-button {
  border: 1rpx solid #5dc355;
  width: 146rpx !important;
  color: #5dc355;
  background-color: #fff;
  height: 58rpx;
}

.drawer-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 550rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fff;
  margin: -150rpx 100rpx 0 100rpx;
  border-radius: 4rpx;
}

.btn-container {
  display: flex;
  display: -webkit-flex;
  height: 100rpx;
  align-items: center;
  border-top: 1rpx solid #f5f5f5;
}

.btn {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  width: 50%;
  height: 100%;
}

.special-price-textbox {
  margin: 30rpx 20rpx;
  padding: 0;
  width: 100%;
  font-size: 32rpx;
  text-align: center;
  background-color: #fff;
}

.btn-ok {
  border-left: 1rpx solid #f5f5f5;
  color: #1aad19;
}
