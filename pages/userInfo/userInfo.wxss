.header {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  height: 280rpx;
  width: 100%;
  background-image: url('c_me_bg.png');
  background-size: 100% 100%;
}

.user-image {
  margin-top: 50rpx;
  height: 120rpx;
  width: 120rpx;
}

.user-name {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #fff;
}

.operation-container {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  height: 150rpx;
  width: 100%;
  background-color: #fff;
}

.operation-item {
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  margin-top: 10rpx;
  width: 33%;
  font-size: 24rpx;
  color: #909090;
}

.operation-item image {
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 10rpx;
}

.count-icon {
  position: absolute;
  top: -8rpx;
  right: 90rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #f73a4a;
  color: #fff;
  font-size: 20rpx;
}

.address-container {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  font-size: 28rpx;
}

.address-key {
  display: inline-block;
  margin-left: 30rpx;
  width: 150rpx;
}

.address-value {
  display: inline-block;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.select-detail {
  margin-right: 30rpx;
  height: 50rpx;
  width: 50rpx;
}
