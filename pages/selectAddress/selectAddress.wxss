page {
  min-height: 100%;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

.header {
  display: flex;
  align-items: center;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
}

.header-icon {
  display: inline-block;
  margin: 0 30rpx;
  height: 30rpx;
  width: 4rpx;
  background-color: #7a80fa;
}

.body {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

/* 地址 */

.address-container {
  height: 150rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #fafafa;
  overflow: hidden;
}

.address-container image {
  margin: 0 30rpx;
  height: 50rpx;
  width: 50rpx;
}

.address-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.delete-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  background-color: red;
  width: 90px;
  height: 100%;
}

.touch-move-active .address-item, .touch-move-active .delete-address {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.isSelected-icon {
  margin: 0 30rpx;
}

.address-info-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 530rpx;
  height: 120rpx;
}

.address-info-details {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #9a9a9a;
}

.out-of-range-title {
  display: block;
  padding-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #b1b1b1;
  font-size: 30rpx;
  background-color: #f5f5f5;
}

.add-new-address {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #7a80fa;
  color: #fff;
  text-align: center;
}

.add-address-icon {
  display: inline-block;
  margin-right: 10rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 2rpx solid #fff;
  border-radius: 40rpx;
  text-align: center;
}
